@model DershaneTakipSistemi.Models.Odeme

@{
    ViewData["Title"] = "Ödeme Sil";
}

<h1>@ViewData["Title"]</h1>

<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

<h3>Bu ödemeyi silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Silinecek Ödeme Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ogrenci)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ogrenci.Ad) @Html.DisplayFor(model => model.Ogrenci.Soyad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tutar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tutar)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OdemeTarihi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OdemeTarihi)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
    </form>
</div>
