@model DershaneTakipSistemi.Models.Ogrenci

@{
    ViewData["Title"] = "Yeni Öğrenci Oluştur";
}

<h1>@ViewData["Title"]</h1>

<h4>Öğrenci Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        @* Formu biraz daha genişletelim *@
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Ad" class="control-label"></label>
                        <input asp-for="Ad" class="form-control" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Soyad" class="control-label"></label>
                        <input asp-for="Soyad" class="form-control" />
                        <span asp-validation-for="Soyad" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CepTelefonu" class="control-label"></label>
                        <input asp-for="CepTelefonu" class="form-control" />
                        <span asp-validation-for="CepTelefonu" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="KayitTarihi" class="control-label"></label>
                        <input asp-for="KayitTarihi" class="form-control" />
                        <span asp-validation-for="KayitTarihi" class="text-danger"></span>
                    </div>
                </div>
                @* Views/Ogrencis/Create.cshtml veya Edit.cshtml içinde *@
                <div class="form-group mb-3">
                    <label asp-for="SinifId" class="control-label"></label>
                    <select asp-for="SinifId" class="form-control" asp-items="ViewBag.SinifId">
                        <option value="">-- Sınıf Seçiniz --</option> @* Boş seçenek *@
                    </select>
                    <span asp-validation-for="SinifId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-check mb-3 pt-4">
                        @* Checkbox'ı hizalamak için pt-4 eklendi *@
                        <input class="form-check-input" asp-for="AktifMi" />
                        <label class="form-check-label" asp-for="AktifMi"></label>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                @* Butonun üstüne boşluk *@
                <input type="submit" value="Oluştur" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Listeye Geri Dön</a> @* Geri Dön butonu *@
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}